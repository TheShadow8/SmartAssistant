<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:fitsSystemWindows="true">


    <EditText
        android:id="@+id/in_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:accessibilityLiveRegion="none"
        android:autoText="false"
        android:editable="false"
        android:hint="Set time"
        android:visibility="visible"
        android:layout_alignTop="@+id/btn_time"
        android:layout_alignParentStart="true" />

    <Button

        android:id="@+id/btn_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/viewsch"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="27dp"
        android:background="@color/colorPrimary"
        android:text="Select Time"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/input_temp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/in_time"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="Input Temperature"
        android:inputType="number" />

    <Button
        android:text="Set a Schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/set"
        android:onClick = "callListView"
        android:layout_below="@+id/input_temp"
        android:layout_alignParentStart="true"
        android:background="#228899"
        android:textColor="#FFFFFF"
        android:layout_marginStart="18dp" />


    <TextView
        android:text=" C\u00B0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/input_temp"
        android:layout_toRightOf="@+id/input_temp"
        android:id="@+id/textView2" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/viewsch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Schedule"
        android:layout_alignBaseline="@+id/set"
        android:layout_alignBottom="@+id/set"
        android:layout_alignParentEnd="true"
        android:background="@color/colorAccent"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="11dp" />


</RelativeLayout>







